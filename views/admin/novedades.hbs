        <div class="col">
            <p class="text-end">
                <span class="fw-bold fs-5">Hola {{persona}}</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesi√≥n <i class="fas fa-solid fa-arrow-right"></i></a>
            </p>
        </div>
    </div>
    {{!-- fin fila 1 --}}
